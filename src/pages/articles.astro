---
import Layout from "../layouts/Main.astro"

const articles = Astro.fetchContent('./articles/*.md').reverse()
---
<Layout>
  {articles.map(article => {
    return (
      <a href={article.url} class="flex flex-col">
        <h2 class="font-semibold text-md text-blue-600 hover:text-blue-700">{article.title}</h2>
        <p class="text-sm text-gray-670">{article.description}</p>
      </a>
    )
  })}
</Layout>

