---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { content } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Example site to demonstrate how Astro works.">

    <title>{content.title}</title>

    <link rel="icon"
          type="image/svg+xml"
          href="/favicon.svg">
    <link rel="stylesheet" href="/css/tailwind.css" type="text/css" />
    <link rel="stylesheet" href="/css/article.css" type="text/css" />
  </head>

  <body class="bg-white">
    <Navbar />
    <main class="mx-auto p-4 max-w-2xl">
      <article class="space-y-8">
        <div class="space-y-2 my-8">
          <h1 class="font-bold text-2xl">{content.title}</h1>
          <div class="space-x-2">
            {content.tags?.map(tag => {
              return <a href={`/tags/${tag}`} class="text-blue-600 text-sm">#{tag}</a>
            })}
          </div>
        </div>
        <div class="article">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
