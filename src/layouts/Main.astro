---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Example site to demonstrate how Astro works.">

    <title>{title}</title>

    <link rel="icon"
          type="image/svg+xml"
          href="/favicon.svg">
    <link rel="stylesheet" href="/css/tailwind.css" type="text/css" />
  </head>

  <body class="bg-white">
    <Navbar />
    <main class="mx-auto p-4 max-w-2xl space-y-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
